<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.sugandh.panacea1.user.fragHome">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Electrician"
                android:gravity="bottom|center"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:id="@+id/bt_electrician"
                android:layout_weight="0.40"
                android:background="@mipmap/electrician6"/>

            <Button
                android:text="Plumber"
                android:gravity="bottom|center"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:id="@+id/bt_plumber"
                android:layout_weight="0.31"
                android:background="@mipmap/ic_plumber6" />

            <Button
                android:text="Carpenter"
                android:gravity="bottom|center"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:id="@+id/bt_carpenter"
                android:layout_weight="0.36"
                android:background="@mipmap/ic_carpentor6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Mason"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_mason"
                android:layout_weight="0.40"
                android:background="@mipmap/mason6" />

            <Button
                android:text="Painter"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_painter"
                android:layout_weight="0.31"
                android:background="@mipmap/ic_painter6"
                />

            <Button
                android:text="Mechanic"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_mechanic"
                android:layout_weight="0.36"
                android:background="@mipmap/ic_mechanic6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button
                android:text="Tailor"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_tailor"
                android:layout_weight="0.40"
                android:background="@mipmap/ic_tailor6" />

            <Button
                android:text="Cook"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_cook"
                android:layout_weight="0.31"
                android:background="@mipmap/ic_cook6" />

            <Button
                android:text="Welder"
                android:gravity="bottom|center"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:id="@+id/bt_welder"
                android:layout_weight="0.36"
                android:background="@mipmap/welder666" />
        </LinearLayout>
        <!--<Button-->
        <!--android:text="Logout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/button12"-->
        <!--android:onClick="logout"/>-->
    </LinearLayout>

</android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>